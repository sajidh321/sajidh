import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
    
        Scanner sc = new Scanner(System.in);
        long N = sc.nextLong();   // use long to handle large values
        
        long sum = N * (N + 1) / 2;
        
        System.out.println(sum);
        
        
    }
}

